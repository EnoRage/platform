{
  "name": "trust-platform",
  "version": "0.0.1",
  "scripts": {
    "prettify": "prettier --parser typescript --single-quote --write 'src/**/*.{ts,tsx}'",
    "check-prettier": "prettier --parser typescript --single-quote --list-different 'src/**/*.{ts,tsx}'",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'config/*.{js,ts,tsx}' --max-warnings 0",
    "test": "node config/test.js",
    "unit": "yarn jest --colors",
    "coverage": "yarn unit --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/eslint-plugin-tslint": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "@typescript-eslint/typescript-estree": "^1.12.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-react": "^7.14.2",
    "jest": "^24.8.0",
    "jest-fetch-mock": "^2.1.2",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  }
}
