{
  "name": "trust-platform",
  "version": "0.0.1",
  "scripts": {
    "prettify": "prettier --parser typescript --single-quote --write 'src/**/*.{ts,tsx}'",
    "check-prettier": "prettier --parser typescript --single-quote --list-different 'src/**/*.{ts,tsx}'",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'config/*.{js,ts,tsx}' --max-warnings 0",
    "test": "node config/test.js",
    "unit": "yarn jest --colors",
    "coverage": "yarn unit --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "dev": "webpack-dev-server --open --config webpack.dev.ts",
    "build": "webpack --mode production --config webpack.prod.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "@types/webpack": "^4.32.1",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/eslint-plugin-tslint": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "@typescript-eslint/typescript-estree": "^1.12.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-react": "^7.14.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-fetch-mock": "^2.1.2",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "node-fetch": "^2.6.0"
  }
}
